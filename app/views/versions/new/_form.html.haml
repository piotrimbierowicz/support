= form_for version, :url => new_version_project_path(@project) do |f|
  .form-horizontal
    .form-group
      = f.label :name, :class => 'control-label col-sm-4'
      .col-sm-8
        = f.text_field :name, :class => 'form-control'
    .form-group
      .col-sm-offset-4.col-sm-8
        = f.submit 'Zapisz', :class => 'btn btn-success'